# GenETL Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5450
POSTGRES_DB=genetl_warehouse
POSTGRES_USER=genetl
POSTGRES_PASSWORD=genetl_pass
POSTGRES_SSLMODE=prefer

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Cache Settings
REDIS_HOST=localhost
REDIS_PORT=6390
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SOCKET_TIMEOUT=30
REDIS_SOCKET_CONNECT_TIMEOUT=30
REDIS_SOCKET_KEEPALIVE=True
REDIS_SOCKET_KEEPALIVE_OPTIONS={}

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================

# Airflow Core Settings
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://genetl:genetl_pass@localhost:5450/genetl_warehouse
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=True
AIRFLOW__CORE__LOAD_EXAMPLES=False

# Airflow Webserver Settings
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=True
AIRFLOW__WEBSERVER__AUTHENTICATE=True
AIRFLOW__WEBSERVER__AUTH_BACKEND=airflow.auth.backends.password_auth
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key-here

# Airflow Scheduler Settings
AIRFLOW__SCHEDULER__DAG_DIR_LIST_INTERVAL=300
AIRFLOW__SCHEDULER__CATCHUP_BY_DEFAULT=False

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# AI Model Settings
AI_MODEL_CONFIDENCE_THRESHOLD=0.7
AI_MAX_RECORDS_PER_BATCH=10000
AI_ENABLE_CACHING=True
AI_CACHE_TTL=3600

# Machine Learning Settings
ML_MODEL_RETRAIN_INTERVAL_HOURS=24
ML_VALIDATION_SPLIT=0.2
ML_RANDOM_SEED=42
ML_N_JOBS=-1

# Natural Language Processing
NLP_MAX_QUERY_LENGTH=500
NLP_ENABLE_AUTOCOMPLETE=True
NLP_RESPONSE_FORMAT=json

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Levels
LOG_LEVEL=INFO
AIRFLOW_LOG_LEVEL=INFO
DB_LOG_LEVEL=WARNING
AI_LOG_LEVEL=INFO

# Log File Settings
LOG_FILE_PATH=logs/genetl.log
LOG_MAX_FILE_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Authentication Settings
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Settings
CORS_ORIGINS=http://localhost:8095,http://localhost:3000
CORS_ALLOW_CREDENTIALS=True

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Memory Settings
MAX_MEMORY_USAGE_MB=4096
CHUNK_SIZE=10000
BATCH_SIZE=1000

# Concurrency Settings
MAX_WORKERS=4
THREAD_POOL_SIZE=10
ASYNC_TIMEOUT=300

# Cache Settings
ENABLE_QUERY_CACHE=True
QUERY_CACHE_TTL=300
RESULT_CACHE_SIZE=1000

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health Check Settings
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Metrics Settings
ENABLE_METRICS=True
METRICS_PORT=9090
METRICS_PATH=/metrics

# Alert Settings
ENABLE_ALERTS=False
ALERT_EMAIL=admin@example.com
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
DEBUG=False
DEVELOPMENT_MODE=False
ENABLE_DEBUG_TOOLBAR=False

# Testing Settings
TESTING=False
TEST_DATABASE_URL=postgresql://genetl:genetl_pass@localhost:5450/genetl_test

# Mock Settings
ENABLE_MOCK_DATA=False
MOCK_DATA_SIZE=1000

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Container Settings
COMPOSE_PROJECT_NAME=genetl
COMPOSE_FILE=docker-compose.yml

# Volume Settings
DATA_VOLUME_PATH=./data
LOGS_VOLUME_PATH=./logs
AIRFLOW_VOLUME_PATH=./dags

# Network Settings
DOCKER_NETWORK_NAME=genetl_network

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database Backup Settings
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# Data Backup Settings
DATA_BACKUP_ENABLED=True
DATA_BACKUP_FORMAT=parquet
DATA_COMPRESSION=gzip

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# API Keys (replace with actual keys)
OPENAI_API_KEY=your-openai-api-key-here
HUGGING_FACE_API_KEY=your-hugging-face-api-key-here

# External Services
NOTIFICATION_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATION_ENABLED=False

# Cloud Storage (if using)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add your custom configuration variables here
# CUSTOM_VARIABLE=value